{
    "name": "Traffic analyzer",
    "version": "0.1",
    "description": "I'm watching you",
    "manifest_version": 2,
    "author": "Vanusha",
    "icons": {
      "128": "logo.png"
    },
    "permissions": [
      "<all_urls>",
      "webRequest",
      "webRequestBlocking",
      "storage"
    ],
    "background": { 
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
      "matches": ["https://www.youtube.com/*"],
        "js": ["mouse_watcher.js"]
      }
    ],

    "browser_action": {
      "default_title": "Configure",
      "default_popup": "popup.html"
    }
}
